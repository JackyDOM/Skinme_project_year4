<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SignIn_Screen.MainActivity">

        <LinearLayout
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#305575"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello skin lover!"
                android:textSize="25sp" />

            <TextView
                android:padding="5dp"
                android:textSize="15sp"
                android:textColor="#305575"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome back, your best friend\nmissed you!"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:padding="10dp"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:background="@drawable/border_edit_text"
                android:hint="Username"/>

            <EditText
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:layout_width="380dp"
                android:layout_height="60dp"
                android:background="@drawable/border_edit_text"
                android:hint="Username"/>


        </LinearLayout>
        <Button
            android:textColor="@color/white"
            android:text="SIGN IN"
            android:textSize="23sp"
            android:backgroundTint="#1e0554"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="380dp"
            android:layout_height="67dp"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="------------------------------"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="OR"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="------------------------------"/>

        </LinearLayout>

        <Button
            android:textSize="20dp"
            android:text="Login With Google"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_border"/>

        <LinearLayout
            android:layout_marginBottom="100dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#99989c"
                android:textSize="18dp"
                android:text="Not a member? "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txtRegister"
                android:textStyle="bold"
                android:textSize="18sp"
                android:backgroundTint="@color/white"
                android:textColor="#21055e"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register Name" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="15sp"
                android:text="Lotd.Cambodia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Space
                android:layout_width="230dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Skinme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>