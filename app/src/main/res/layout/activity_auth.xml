<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#b87509"
        android:orientation="vertical"
        tools:context=".Auth_Screen.AuthActivity">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="350dp"
                android:src="@drawable/arc_1"
                android:scaleType="centerCrop"/>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f2f2f2">

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hey Beautiful,"
                    android:textColor="#08587E"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome To Skinme!"
                    android:textColor="#08587E"
                    android:textSize="32sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="          Invest in your skin.It is going to represent you
            \nfor a very long time.Your skin is your best accessory. Take good care of it.
Beautiful skin requires commitment, not a miracle."
                    android:textAlignment="center"
                    android:textColor="#297091"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:orientation="horizontal">

                    <Button
                        android:textColor="@color/white"
                        android:id="@+id/btnSignIn"
                        android:backgroundTint="#139dbf"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:text="SIGN IN"
                        android:textSize="20sp"/>

                    <Button
                        android:textColor="@color/white"
                        android:id="@+id/btnSignUp"
                        android:backgroundTint="#bf0f18"
                        android:layout_marginLeft="20dp"
                        android:layout_gravity="center"
                        android:layout_width="180dp"
                        android:layout_height="70dp"
                        android:text="SIGN UP"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

</ScrollView>